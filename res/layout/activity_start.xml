<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.thwildau.app.amber.LoginActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:paddingBottom="60dp"
        android:paddingTop="30dp"
        android:src="@drawable/amber_icon" />

        <Button
            android:id="@+id/btnSingIn"
            style="@style/DefaultButtonText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_margin="4dp"
            android:background="@drawable/button_default_bg"
            android:minHeight="20dip"
            android:padding="12dp"
            android:paddingTop="0dp"
            android:text="Login"
            android:textColor="#1c1c1c"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSignUp"
            style="@style/DefaultButtonText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/btnSingIn"
            android:layout_margin="4dp"
            android:background="@drawable/button_default_bg1"
            android:minHeight="20dip"
            android:padding="12dp"
            android:text="Registrierung"
            android:textColor="#1c1c1c"
            android:textSize="18sp" />

</RelativeLayout>